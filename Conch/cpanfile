### Legacy Deps
#
# String::CamelCase 0.03 has a broken META file that prevents the toolchain
# from being able to figure out its version. All our dependencies rely on 0.02
# so we pin that here. Otherwise, carton will try the latest version and
# hilarity ensues.
requires 'String::CamelCase', '== 0.02';

# database
requires 'DBD::Pg';
requires 'DBIx::Class';
requires 'DBIx::Class::Schema::Loader';
